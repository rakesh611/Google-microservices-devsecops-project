pipeline {
    agent any

    tools {
        jdk 'jdk17'
        nodejs 'node20'
    }

    environment {
        SCANNER_HOME = tool 'sonar'
        DOCKER_USER  = 'rakesh6nm'
        IMAGE_NAME   = 'paymentservice'
        IMAGE_TAG    = "${BUILD_NUMBER}"
        FULL_IMAGE   = "${DOCKER_USER}/${IMAGE_NAME}:${IMAGE_TAG}"
        NVD_API_KEY  = ''
    }

    stages {

        stage("Clean Workspace") {
            steps { cleanWs() }
        }

        stage("Git Checkout") {
            steps {
                git branch: 'main',
                    url: 'https://github.com/rakesh611/Google-microservices-devsecops-project.git'
            }
        }

        stage("SonarQube Analysis") {
            steps {
                dir('src/paymentservice') {
                    withSonarQubeEnv('sonar-jenkins') {
                        sh """
                        ${SCANNER_HOME}/bin/sonar-scanner \
                          -Dsonar.projectKey=paymentservice \
                          -Dsonar.projectName=paymentservice \
                          -Dsonar.sources=. \
                          -Dsonar.language=js \
                          -Dsonar.sourceEncoding=UTF-8
                        """
                    }
                }
            }
        }

        stage("Quality Gate (Local Test)") {
            steps {
                timeout(time: 10, unit: 'MINUTES') {
                    script {
                        try {
                            def qg = waitForQualityGate abortPipeline: false
                            echo "⚠️ SonarQube Quality Gate status: ${qg.status} (ignored for local test)"
                        } catch (err) {
                            echo "⚠️ Could not check Quality Gate: ${err}"
                        }
                    }
                }
            }
        }

        stage("Install Dependencies & npm Audit") {
            steps {
                dir('src/paymentservice') {
                    sh 'npm install || true'

                    script {
                        def auditJson = sh(script: 'npm audit --json || true', returnStdout: true)
                        def audit = readJSON text: auditJson
                        def criticalHighCount = 0
                        if (audit?.metadata?.vulnerabilities) {
                            audit.metadata.vulnerabilities.each { level, count ->
                                if (level in ['high', 'critical']) { criticalHighCount += count }
                            }
                        }
                        echo "ℹ️ npm audit found ${criticalHighCount} high/critical vulnerabilities (ignored for local test)"
                    }
                }
            }
        }

        stage("OWASP Dependency Check (Local)") {
            steps {
                dir('src/paymentservice') {
                    script {
                        try {
                            dependencyCheck additionalArguments: """
                                --scan . \
                                --format XML \
                                --nvdApiKey ${NVD_API_KEY} \
                                --nvdApiDelay 60000 \
                                --disableYarnAudit \
                                --disableNodeAudit
                            """,
                            odcInstallation: 'dp-check'

                            dependencyCheckPublisher pattern: '**/dependency-check-report.xml'
                        } catch (err) {
                            echo "⚠️ OWASP Dependency Check skipped or failed: ${err}"
                        }
                    }
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'src/paymentservice/dependency-check-report.xml',
                                     allowEmptyArchive: true
                    echo "ℹ️ OWASP Dependency Check completed (vulnerabilities ignored for local test)"
                }
            }
        }

        stage("Trivy File Scan (Local)") {
            steps {
                dir('src/paymentservice') {
                    sh '''
                    trivy fs . \
                      --severity CRITICAL,HIGH \
                      --scanners vuln,misconfig,secret \
                      -f json -o trivy-fs-report.json || true
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'src/paymentservice/trivy-fs-report.json',
                                     allowEmptyArchive: true
                    echo "ℹ️ Trivy file scan completed (vulnerabilities ignored for local test)"
                }
            }
        }

        stage("Build Docker Image") {
            steps {
                dir('src/paymentservice') {
                    sh """
                    echo "Building image: ${FULL_IMAGE}"
                    docker rmi -f ${FULL_IMAGE} || true
                    docker build -t ${FULL_IMAGE} .
                    """
                }
            }
        }

        stage("Push Image to DockerHub") {
            steps {
                dir('src/paymentservice') {
                    script {
                        docker.withRegistry('https://index.docker.io/v1/', 'dockerhub1') {
                            docker.image("${FULL_IMAGE}").push()
                            docker.image("${FULL_IMAGE}").push('latest')
                        }
                    }
                }
            }
        }

        stage("Trivy Image Scan (Local)") {
            steps {
                dir('src/paymentservice') {
                    sh """
                    trivy image -f json -o trivy-image-paymentservice.json ${FULL_IMAGE} || true
                    trivy image -f table -o trivy-image-paymentservice.txt ${FULL_IMAGE} || true
                    """
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'src/paymentservice/trivy-image-paymentservice.*',
                                     allowEmptyArchive: true
                    echo "ℹ️ Trivy image scan completed (vulnerabilities ignored for local test)"
                }
            }
        }
    }

    post {
        always {
            emailext(
                subject: "Pipeline ${currentBuild.currentResult}: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
                <p><b>PaymentService – Google Shop DevSecOps Pipeline (Local Test)</b></p>
                <p>Status: ${currentBuild.currentResult}</p>
                <p>Job: ${env.JOB_NAME}</p>
                <p>Build: ${env.BUILD_NUMBER}</p>
                <p><a href="${env.BUILD_URL}">View Build</a></p>
                """,
                to: 'jharakesh485@gmail.com',
                mimeType: 'text/html',
                attachmentsPattern: '**/dependency-check-report.xml, **/trivy-*.json, **/trivy-*.txt'
            )
        }
    }
}
