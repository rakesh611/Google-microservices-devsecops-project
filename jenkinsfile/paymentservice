pipeline {
    agent any

    tools {
        jdk 'jdk17'
        nodejs 'node20'
    }

    environment {
        // Sonar
        SCANNER_HOME = tool 'sonar'

        // Docker
        DOCKER_USER = 'rakesh6nm'
        IMAGE_NAME  = 'paymentservice'
        IMAGE_TAG   = "${BUILD_NUMBER}"
        FULL_IMAGE  = "${DOCKER_USER}/${IMAGE_NAME}:${IMAGE_TAG}"
    }

    stages {

        // ---------- Clean ----------
        stage("Clean Workspace") {
            steps {
                cleanWs()
            }
        }

        // ---------- Git ----------
        stage("Git Checkout") {
            steps {
                git branch: 'main',
                    url: 'https://github.com/rakesh611/Google-microservices-devsecops-project.git'
            }
        }

        // ---------- SonarQube ----------
        stage("SonarQube Analysis") {
            steps {
                dir('src/paymentservice') {
                    withSonarQubeEnv('sonar-jenkins') {
                        sh '''
                          $SCANNER_HOME/bin/sonar-scanner \
                            -Dsonar.projectKey=paymentservice \
                            -Dsonar.projectName=paymentservice \
                            -Dsonar.sources=. \
                            -Dsonar.language=js
                        '''
                    }
                }
            }
        }

        // ---------- Quality Gate ----------
        stage("Quality Gate") {
            steps {
                timeout(time: 10, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        // ---------- Dependencies ----------
        stage("Install Dependencies") {
            steps {
                dir('src/paymentservice') {
                    sh 'npm ci'
                }
            }
        }

        // ---------- Trivy FS Scan ----------
        stage("Trivy FS Scan") {
            steps {
                dir('src/paymentservice') {
                    sh '''
                      trivy fs . \
                        --severity HIGH,CRITICAL \
                        --scanners vuln,misconfig,secret \
                        --format table \
                        --output trivy-fs-report.txt || true
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts 'src/paymentservice/trivy-fs-report.txt'
                }
            }
        }

        // ---------- Docker Build ----------
        stage("Build Docker Image") {
            steps {
                dir('src/paymentservice') {
                    sh '''
                      echo "Building Docker image: ${FULL_IMAGE}"
                      docker rmi -f ${FULL_IMAGE} || true
                      docker build -t ${FULL_IMAGE} .
                    '''
                }
            }
        }

        // ---------- Docker Push ----------
        stage("Push Docker Image") {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub1') {
                        docker.image("${FULL_IMAGE}").push()
                        docker.image("${FULL_IMAGE}").push('latest')
                    }
                }
            }
        }

        // ---------- Trivy Image Scan ----------
        stage("Trivy Image Scan") {
            steps {
                sh '''
                  trivy image ${FULL_IMAGE} \
                    --severity HIGH,CRITICAL \
                    --format json \
                    -o trivy-image-payment.json || true

                  trivy image ${FULL_IMAGE} \
                    --severity HIGH,CRITICAL \
                    --format table \
                    -o trivy-image-payment.txt || true
                '''
            }
            post {
                always {
                    archiveArtifacts 'trivy-image-payment.*'
                }
            }
        }
    }

    // ---------- Email Notification ----------
    post {
        always {
            script {
                def buildStatus = currentBuild.currentResult
                def buildUser = currentBuild.getBuildCauses('hudson.model.Cause$UserIdCause')[0]?.userId ?: 'GitHub User'

                emailext(
                    subject: "Pipeline ${buildStatus}: ${JOB_NAME} #${BUILD_NUMBER}",
                    mimeType: 'text/html',
                    to: 'jharakesh485@gmail.com',
                    body: """
                        <h3>Paymentservice â€“ DevSecOps Pipeline</h3>
                        <p><b>Status:</b> ${buildStatus}</p>
                        <p><b>Build Number:</b> ${BUILD_NUMBER}</p>
                        <p><b>Triggered By:</b> ${buildUser}</p>
                        <p><b>Build URL:</b> <a href="${BUILD_URL}">${BUILD_URL}</a></p>
                    """,
                    attachmentsPattern: 'trivy-fs-report.txt,trivy-image-payment.json,trivy-image-payment.txt'
                )
            }
        }
    }
}
