// Declare dockerImage globally so it's available across stages
def dockerImage

pipeline {
    agent any

    tools {
        jdk 'jdk21'
    }

    environment {
        // Docker
        DOCKER_REPO = 'rakesh6nm'
        IMAGE_NAME  = 'adservice'
        IMAGE_FULL  = "${DOCKER_REPO}/${IMAGE_NAME}"
        IMAGE_TAG   = "${BUILD_NUMBER}"

        // GitOps
        GITOPS_REPO = 'git@github.com:rakesh611/Google-microservices-devsecops-project.git'
        gitopsDir   = "Google-microservices-devsecops-project"
    }

    stages {

        stage('Clean Workspace') {
            steps { cleanWs() }
        }

        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Trivy FS Scan') {
            steps {
                dir('src/adservice') {
                    sh '''
                        trivy fs . \
                        --severity CRITICAL,HIGH \
                        --scanners vuln,misconfig,secret \
                        --format table \
                        --output trivy-fs-report.txt || true
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'src/adservice/trivy-fs-report.txt', fingerprint: true
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('src/adservice') {
                    script {
                        dockerImage = docker.build("${IMAGE_FULL}:${IMAGE_TAG}")
                        dockerImage.tag("latest")
                    }
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub1') {
                        dockerImage.push("${IMAGE_TAG}")
                        dockerImage.push("latest")
                    }
                }
            }
        }

        stage('Update GitOps Repo') {
            steps {
                sshagent(['gitops_ssh']) {
                    script {
                        // Clone repo
                        sh "rm -rf ${gitopsDir} && git clone ${GITOPS_REPO} ${gitopsDir}"

                        // Update Docker image in YAML
                        sh """
                            echo "Updating deployment image to ${IMAGE_FULL}:${IMAGE_TAG}"
                            sed -i "s|image: ${DOCKER_REPO}/${IMAGE_NAME}:.*|image: ${DOCKER_REPO}/${IMAGE_NAME}:${IMAGE_TAG}|" ${gitopsDir}/k8s/adservice.yml
                            cat ${gitopsDir}/k8s/adservice.yml
                        """

                        // Git commit and push
                        sh """
                            git -C ${gitopsDir} config user.email "jharakesh485@gmail.com"
                            git -C ${gitopsDir} config user.name "Rakesh Jha"
                            git -C ${gitopsDir} add k8s/adservice.yml
                            git -C ${gitopsDir} commit -m "Deploy ${IMAGE_NAME} ${IMAGE_TAG}" || echo "No changes to commit"
                            git -C ${gitopsDir} push origin main || echo "Push failed, check permissions"
                        """
                    }
                }
            }
        }
    }

    post {
        always {
            script {
                def trivyReport = 'src/adservice/trivy-fs-report.txt'
                def attachments = fileExists(trivyReport) ? trivyReport : ''
                emailext(
                    subject: "Pipeline ${currentBuild.currentResult}: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                    mimeType: 'text/html',
                    to: 'jharakesh485@gmail.com',
                    body: """
                        <h3>Adservice DevSecOps Pipeline</h3>
                        <p><b>Status:</b> ${currentBuild.currentResult}</p>
                        <p><b>Job:</b> ${env.JOB_NAME}</p>
                        <p><b>Build:</b> ${env.BUILD_NUMBER}</p>
                        <p><b>Docker Image:</b> ${IMAGE_FULL}:${IMAGE_TAG}</p>
                        <p><b>URL:</b> <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
                    """,
                    attachmentsPattern: attachments
                )
            }
        }

        failure {
            script {
                echo "Pipeline failed! Check Trivy report or Docker push for issues."
            }
        }
    }
}
