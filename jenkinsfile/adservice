// Declare dockerImage globally
def dockerImage

pipeline {
    agent any

    tools {
        jdk 'jdk21'
    }

    environment {
        // Docker
        DOCKER_REPO = 'rakesh6nm'
        IMAGE_NAME  = 'adservice'
        IMAGE_TAG   = "${BUILD_NUMBER}"
        IMAGE_FULL  = "${DOCKER_REPO}/${IMAGE_NAME}:${IMAGE_TAG}"

        // GitOps
        GITOPS_REPO = 'git@github.com:rakesh611/Google-microservices-devsecops-project.git'
        GITOPS_DIR  = "Google-microservices-devsecops-project"
    }

    stages {

        stage('Clean Workspace') {
            steps { cleanWs() }
        }

        stage('Checkout SCM') {
            steps { checkout scm }
        }

        stage('Trivy FS Scan') {
            steps {
                dir('src/adservice') {
                    sh '''
                        trivy fs . \
                        --severity CRITICAL,HIGH \
                        --scanners vuln,misconfig,secret \
                        --format table \
                        --output trivy-fs-report.txt || true
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'src/adservice/trivy-fs-report.txt', fingerprint: true
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('src/adservice') {
                    script {
                        dockerImage = docker.build("${IMAGE_FULL}")
                        dockerImage.tag("latest")
                    }
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub1') {
                        dockerImage.push("${IMAGE_TAG}")
                        dockerImage.push("latest")
                    }
                }
            }
        }

        stage('Update GitOps Deployment') {
            steps {
                sshagent(['gitops_ssh']) {
                    sh """
                        rm -rf ${GITOPS_DIR}
                        git clone ${GITOPS_REPO} ${GITOPS_DIR}

                        echo "Updating adservice deployment image to ${IMAGE_FULL}"
                        sed -i "s|image: ${DOCKER_REPO}/${IMAGE_NAME}:.*|image: ${IMAGE_FULL}|" ${GITOPS_DIR}/k8s/adservice.yml
                        cat ${GITOPS_DIR}/k8s/adservice.yml

                        git -C ${GITOPS_DIR} config user.email "jharakesh485@gmail.com"
                        git -C ${GITOPS_DIR} config user.name "Rakesh Jha"

                        git -C ${GITOPS_DIR} add k8s/adservice.yml
                        git -C ${GITOPS_DIR} commit -m "Deploy adservice ${IMAGE_TAG}" --allow-empty
                        git -C ${GITOPS_DIR} push origin main
                    """
                }
            }
        }

    }

    post {
        always {
            emailext(
                subject: "Pipeline ${currentBuild.currentResult}: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
                    <h3>Adservice DevSecOps Pipeline</h3>
                    <p><b>Status:</b> ${currentBuild.currentResult}</p>
                    <p><b>Job:</b> ${env.JOB_NAME}</p>
                    <p><b>Build:</b> ${env.BUILD_NUMBER}</p>
                    <p><b>Docker Image:</b> ${IMAGE_FULL}</p>
                    <p><b>URL:</b> <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
                """,
                to: 'jharakesh485@gmail.com',
                mimeType: 'text/html',
                attachmentsPattern: '**/trivy-fs-report.txt'
            )
        }

        failure {
            script {
                echo "Pipeline failed! Check Trivy report or Docker push for issues."
            }
        }
    }
}
